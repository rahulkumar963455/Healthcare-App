<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".LoginActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50mdp"
        android:text="24*7 HealthCare"
        android:textColor="@color/purple"
        android:textSize="@dimen/_25font_mdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Login"
        android:textColor="#ffff"
        android:textSize="@dimen/_28font_mdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="@dimen/_280mdp"
        android:layout_height="@dimen/_45mdp"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="UserName"
        android:textColor="#ffff"
        android:background="@drawable/text_bg"
        android:drawablePadding="@dimen/_10mdp"
        android:textColorHint="#fff"
        android:textSize="@dimen/_20font_mdp"
        android:padding="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edt_passowrd"
        android:layout_width="@dimen/_280mdp"
        android:layout_height="@dimen/_45mdp"
        android:layout_marginTop="52dp"
        android:drawableLeft="@drawable/baseline_password_24"
        android:textColorHint="#ffff"
        android:hint="Password"
        android:drawablePadding="@dimen/_10mdp"
        android:inputType="textPassword"
        android:background="@drawable/text_bg"
        android:padding="@dimen/_8mdp"
        android:textColor="#ffff"
        android:textSize="@dimen/_20font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_username" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginTop="@dimen/_100mdp"
        android:backgroundTint="@color/purple"
        android:padding="@dimen/_3mdp"
        android:textSize="@dimen/_15mdp"
        android:textStyle="bold"
        android:background="@drawable/text_bg"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_passowrd" />

    <TextView
        android:id="@+id/register_for_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50mdp"
        android:textSize="@dimen/_20font_mdp"
        android:text="Register for new User"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />


</androidx.constraintlayout.widget.ConstraintLayout>